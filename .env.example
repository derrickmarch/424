# Database Configuration
DATABASE_URL=sqlite:///./account_verifier.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/account_verifier_db

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_BASE_URL=https://your-domain.com

# Bland AI Configuration
BLAND_API_KEY=your_bland_api_key_here
BLAND_PROJECT_ID=optional_project_or_agent_id
BLAND_FROM_NUMBER=+1234567890
BLAND_WEBHOOK_BASE_URL=http://localhost:8001

# Telnyx Configuration
TELNYX_API_KEY=your_telnyx_api_key_here
TELNYX_FROM_NUMBER=+1234567890
TELNYX_WEBHOOK_BASE_URL=http://localhost:8001

# Plivo Configuration
PLIVO_AUTH_ID=your_plivo_auth_id
PLIVO_AUTH_TOKEN=your_plivo_auth_token
PLIVO_FROM_NUMBER=+1234567890
PLIVO_WEBHOOK_BASE_URL=http://localhost:8001

# SignalWire Configuration
SIGNALWIRE_PROJECT=your_signalwire_project
SIGNALWIRE_TOKEN=your_signalwire_token
SIGNALWIRE_FROM_NUMBER=+1234567890
SIGNALWIRE_WEBHOOK_BASE_URL=http://localhost:8001

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8001
APP_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Telephony Provider Selection (twilio|vonage|bland)
TELEPHONY_PROVIDER=bland

# Testing Mode (true = mock calls, false = real calls)
TEST_MODE=true

# Test Mode Configuration
# When TEST_MODE=true, all calls will be made to this verified test number
# This is required for Twilio trial accounts which can only call verified numbers
TEST_PHONE_NUMBER=+19092028031

# Call Settings
MAX_CONCURRENT_CALLS=1
MAX_RETRY_ATTEMPTS=2
RETRY_BACKOFF_MINUTES=15,120
CALL_TIMEOUT_SECONDS=300

# Looping Call Settings
ENABLE_AUTO_CALLING=true
CALL_LOOP_INTERVAL_MINUTES=5
BATCH_SIZE_PER_LOOP=10

# Compliance Settings
ENABLE_CALL_RECORDING=false
REQUIRE_RECORDING_CONSENT=false
ENABLE_TRANSCRIPTION=false

# Notification Settings
ADMIN_EMAIL=admin@example.com
ADMIN_PHONE=+1234567890
